int divisorStatus[4] = {1, 2, 4, 8}; 
String runStatus[2] = { "Stop ", "Start"};

volatile char divCounter = 0, runStat = 0, divStat = 0;

#define CLOCKS_PER_BEAT 24 // MIDI Clock Ticks
#define BUTTON_DIV 2

void dispRun(int runStat){
  
  display.setTextSize(3);
  display.setCursor(0,0);
  display.setTextColor(WHITE, BLACK);
  display.setCursor(0,32);
  display.print(runStatus[runStat]);
  display.display();
}

void dispDiv(int divIndex){
  display.setTextSize(3);
  display.setCursor(0,0);
  display.setTextColor(WHITE, BLACK); 
  display.print("1/" + String(divisorStatus[divIndex]));
  display.display();
}

void setup() {
  pinMode(6, OUTPUT);
  digitalWrite(6, LOW);

  pinMode(BUTTON_DIV,INPUT_PULLUP);


  display.begin(SSD1306_SWITCHCAPVCC, SCREEN_ADDRESS);

// Clear the buffer
  display.clearDisplay();

  display.drawBitmap(0, 0, smiley, 128, 64, WHITE);
  display.display();
  delay(2000); // Pause for 2 seconds

  // Clear the buffer
  display.clearDisplay();

  dispRun(runStat);
  dispDiv(divStat);

  MIDI.begin(4); // Launch MIDI and listen to channel 4
  MIDI.turnThruOff();
}

void loop() {

  if(!runStat)
    {
        if (digitalRead(BUTTON_DIV) == LOW) {
        divStat++;
        divStat = divStat % 4;
        dispDiv(divStat);
        delay(300); // ugly but just make life easier, no need to check debounce
        } 
    }

  
  if (MIDI.read())                // Is there a MIDI message incoming ?
    {
        switch(MIDI.getType())      // Get the type of the message we caught
        {
          
            case midi::Clock:
                if(!(divCounter&(divisorStatus[divStat]-1))){      
                  MIDI.sendClock();
                }
                divCounter++;
                break;
            case midi::Start:
                MIDI.sendStart();
                runStat = 1;
                dispRun(runStat);
                break;
            case midi::Stop:
                MIDI.sendStop();
                runStat = 0;
                dispRun(runStat);
                break;
            default:
                break;
          
        }
    }

}
